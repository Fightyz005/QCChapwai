                            <div class="col-md-1">
                                <!-- Status Icon -->
                                <div class="text-center">
                                    <img src="~/img/check2.jpg" style="width:80%;" alt="" />
                                    @* @if (checklist.Status == "Completed")
                                    {
                                        <i class="bi bi-ui-checks text-success fs-2"></i>
                                    }
                                    else if (checklist.Status == "Active")
                                    {
