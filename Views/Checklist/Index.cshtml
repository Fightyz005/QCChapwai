                                            <i class="bi bi-three-dots-vertical"></i>
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li>
                                                <a class="dropdown-item" href="@Url.Action("ExportInspectionData", new { id = checklist.ChecklistId })">
                                                    <i class="bi bi-download me-2"></i>Export ข้อมูล
                                                </a>
                                            </li>
                                            @if (checklist.Status == "Active")
                                            {
                                                <li>
                                                    <a class="dropdown-item" href="@Url.Action("Complete", new { id = checklist.ChecklistId })"
                                                       onclick="return confirm('ต้องการปิดใบตรวจสอบนี้หรือไม่?')">
                                                        <i class="bi bi-check-circle me-2"></i>ปิดใบตรวจสอบ
