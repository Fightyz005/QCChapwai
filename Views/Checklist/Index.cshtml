@model List<QcChapWai.Models.ChecklistSummaryViewModel>
@{
    ViewData["Title"] = "Checklist Process";
}

<div class="d-flex justify-content-between align-items-start mb-4">
    <div>
        <h1 class="fw-bold text-dark mb-1">
            <i class="bi bi-clipboard-check text-primary me-2"></i>
            Checklist Process
        </h1>
        <p class="text-muted mb-0">จัดการใบตรวจสอบคุณภาพระหว่างกระบวนการผลิต</p>
    </div>

    <div class="d-flex gap-2">
        <button class="btn btn-outline-primary" onclick="window.location.reload()">
            <i class="bi bi-arrow-clockwise me-1"></i>
            รีเฟรช
        </button>
        <button class="btn btn-outline-success" onclick="exportSummary()">
            <i class="bi bi-download me-1"></i>
            Export สรุป
        </button>
        <a href="@Url.Action("Create")" class="btn btn-primary">
            <i class="bi bi-plus-lg me-1"></i>
            สร้างใบตรวจสอบใหม่
        </a>
    </div>
</div>

<!-- Summary Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-center border-primary">
            <div class="card-body">
                <div class="h3 text-primary mb-1">@Model.Count</div>
                <small class="text-muted">ใบตรวจสอบทั้งหมด</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center border-success">
            <div class="card-body">
                <div class="h3 text-success mb-1">@Model.Count(m => m.Status == "Completed")</div>
                <small class="text-muted">เสร็จสิ้นแล้ว</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center border-warning">
            <div class="card-body">
                <div class="h3 text-warning mb-1">@Model.Count(m => m.Status == "Active")</div>
                <small class="text-muted">กำลังดำเนินการ</small>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center border-info">
            <div class="card-body">
                <div class="h3 text-info mb-1">
                    @{
                        var itemsWithMeasurements = Model.Where(m => m.TotalMeasurements > 0).ToList();
                        var avgPassRate = itemsWithMeasurements.Any() ? Math.Round(itemsWithMeasurements.Average(m => m.PassRate), 1) : 0;
                    }
                    @avgPassRate%
                </div>
                <small class="text-muted">อัตราผ่านเฉลี่ย</small>
            </div>
        </div>
    </div>
</div>

<!-- Checklist Items -->
